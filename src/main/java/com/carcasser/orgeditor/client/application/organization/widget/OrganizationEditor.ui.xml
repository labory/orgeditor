<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="resources" type="com.carcasser.orgeditor.client.resources.AppMessages"/>
    <ui:style>
        .row {
            margin-left: 20px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="form-group">
            <g:InlineLabel text="{resources.editorOrgName}"/>:
            <g:TextBox styleName="form-control" ui:field="name" debugId="org-name-input"/>
        </div>
        <div class="form-group">
            <g:InlineLabel text="{resources.editorOrgAddress}"/>:
            <g:TextBox styleName="form-control" ui:field="address" debugId="org-address-input"/>
        </div>
        <div class="form-group">
            <g:InlineLabel text="{resources.editorOrgDesc}"/>:
            <g:TextBox styleName="form-control" ui:field="description" debugId="org-desc-input"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
