<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.carcasser.orgeditor.client.application.organization.details.tabs">
    <ui:with field="resources" type="com.carcasser.orgeditor.client.resources.AppMessages"/>
    <ui:style>
        .root {
            width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">
        <c:DetailsTabPanel ui:field="tabPanel"/>
        <div>
            <g:Button ui:field="back" styleName="btn btn-default" text="{resources.buttonBack}" debugId="back-org-details"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
